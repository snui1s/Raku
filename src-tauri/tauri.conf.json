    "identifier":  "com.snails.raku-app",
    "build":  {
                  "beforeDevCommand":  "bun run dev",
                  "devUrl":  "http://localhost:1420",
                  "beforeBuildCommand":  "bun run build",
                  "frontendDist":  "../dist"
              },
    "plugins":  {
                    "updater":  {
                                    "endpoints":  [
                                                      "https://raw.githubusercontent.com/snui1s/raku/main/update.json"
                                                  ],
                                    "pubkey":  "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFGNDgxQ0VCMjVCMjNBOEIKUldTTE9ySWw2eHhJSDNQLy9MTCt2OXBzZEtIRW81ckZPaDZWanlnaVBNUFBwZzBXWklER01tc2kK"
                                }
                },
    "app":  {
                "windows":  [
                                {
                                    "title":  "Raku",
                                    "width":  1200,
                                    "height":  800,
                                    "resizable":  true,
                                    "maximized":  false
